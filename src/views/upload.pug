extends base

block content
    main.flex.justify-center.items-center
        div.w-full.max-w-xs
            form(method="POST", enctype="multipart/form-data").form
                div.mb-4.flex.flex-col
                    label(for="video").label Video File
                    input(type="file", accept="video/*", required, id="video", name="video").input
                div.mb-4.flex.flex-col
                    label(for="title").label Title
                    input(placeholder="Title", required, type="text", name="title", maxlength=80).input
                div.mb-4.flex.flex-col
                    label(for="description").label Description
                    input(placeholder="Description", required, type="text", name="description", minlength=20).input
                div.mb-4.flex.flex-col
                    label(for="hashtags").label Hashtags
                    input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags").input
                div
                    input(type="submit", value="Upload Video").input.btn